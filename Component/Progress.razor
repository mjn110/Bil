@using Newtonsoft.Json.Linq
@inherits Classes.Setting
<div class="mb-3 @GetWidthClass()">
    <div class="card table-responsive h-100  @GetColorClass() @IsBordered() @GetBorderClass() shadow-sm rounded p-4">
        <table class="table table-borderless mb-auto">
            <thead class="@Color">
                <tr class="text-center">
                    <th class="text-start" scope="col">#</th>
                    <th scope="col">Collect</th>
                    <th scope="col">On way</th>
                    <th scope="col">Receive</th>
                </tr>
            </thead>
            <tbody class="@Color">
                @ChildContent
            </tbody>
        </table>
        <Download Parent="@this.GetType().Name"></Download>
    </div>
</div>
@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override async Task OnInitializedAsync()
    {

    }
}
