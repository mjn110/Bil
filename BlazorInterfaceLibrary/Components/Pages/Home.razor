@page "/"
@using BlazorInterfaceLibrary.Bil.Classes
@layout EmptyLayout

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blazor Interface Library - Build Beautiful Blazor UIs</title>
    <meta name="description" content="A comprehensive component library for Blazor applications. Modern, accessible, and fully customizable components to accelerate your development.">
    <meta name="author" content="Blazor Interface Library">

    <meta property="og:title" content="Blazor Interface Library - Build Beautiful Blazor UIs">
    <meta property="og:description" content="A comprehensive component library for Blazor applications. Modern, accessible, and fully customizable components to accelerate your development.">
    <meta property="og:type" content="website">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --bg-dark: #0a0e1a;
            --bg-card: #111827;
            --text-primary: #f9fafb;
            --text-muted: #9ca3af;
            --primary: #0ea5e9;
            --primary-dark: #0284c7;
            --border: #1f2937;
        }

        body {
            background: linear-gradient(180deg, #0d1117 0%, #0a0e1a 100%);
            color: var(--text-primary);
            min-height: 100vh;
        }

        .navbar {
            background: rgba(17, 24, 39, 0.8);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(31, 41, 55, 0.5);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 700;
            color: var(--text-primary) !important;
        }

        .logo-box {
            width: 32px;
            height: 32px;
            background: var(--primary);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .nav-link {
            color: var(--text-muted) !important;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: var(--text-primary) !important;
            }

        .btn-primary {
            background: var(--primary);
            border-color: var(--primary);
            color: #0a0e1a;
            font-weight: 600;
        }

            .btn-primary:hover {
                background: var(--primary-dark);
                border-color: var(--primary-dark);
            }

        .btn-outline-light {
            border-color: var(--border);
            color: var(--text-primary);
        }

            .btn-outline-light:hover {
                background: rgba(249, 250, 251, 0.1);
                border-color: var(--text-muted);
                color: var(--text-primary);
            }

        .badge-custom {
            background: rgba(14, 165, 233, 0.1);
            border: 1px solid rgba(14, 165, 233, 0.2);
            color: var(--primary);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            line-height: 1.2;
        }

        .gradient-text {
            background: linear-gradient(135deg, var(--primary) 0%, #06b6d4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .card-custom {
            background: rgba(17, 24, 39, 0.5);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(31, 41, 55, 0.5);
            border-radius: 12px;
            transition: border-color 0.3s;
        }

            .card-custom:hover {
                border-color: rgba(14, 165, 233, 0.5);
            }

        .code-window {
            background: rgba(17, 24, 39, 0.5);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(31, 41, 55, 0.5);
            border-radius: 12px;
            padding: 1.5rem;
            position: relative;
        }

            .code-window::before {
                content: '';
                position: absolute;
                inset: 0;
                background: radial-gradient(circle at center, rgba(14, 165, 233, 0.2), transparent);
                filter: blur(60px);
                z-index: -1;
                border-radius: 12px;
            }

        .window-dots {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .dot-red {
            background: #ef4444;
        }

        .dot-yellow {
            background: #eab308;
        }

        .dot-green {
            background: #22c55e;
        }

        pre {
            background: rgba(10, 14, 26, 0.5);
            padding: 1rem;
            border-radius: 8px;
            overflow-x: auto;
            margin: 0;
        }

        code {
            color: var(--text-primary);
            font-size: 0.875rem;
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            background: rgba(14, 165, 233, 0.1);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            margin-bottom: 1rem;
        }

        .step-number {
            width: 32px;
            height: 32px;
            background: var(--primary);
            color: #0a0e1a;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
        }

        .cta-card {
            background: linear-gradient(135deg, rgba(14, 165, 233, 0.1) 0%, rgba(14, 165, 233, 0.05) 100%);
            border: 1px solid rgba(14, 165, 233, 0.2);
            border-radius: 12px;
            padding: 3rem;
        }

        footer {
            border-top: 1px solid rgba(31, 41, 55, 0.5);
            margin-top: 5rem;
            padding: 2rem 0;
        }

        media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }
        }
    </style>
</head>
<body>

    <section class="py-5">
        <div class="container">
            <div class="row py-5">
                <div class="col-lg-10 mx-auto text-center">
                    <div class="badge-custom mb-4">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                        </svg>
                        Open Source & Free
                    </div>

                    <h1 class="hero-title mb-4">
                        Build Beautiful Blazor UIs<br>
                        <span class="gradient-text">In Record Time</span>
                    </h1>

                    <p class="lead text-light mb-5">
                        A comprehensive component library for Blazor applications. Modern, accessible, and fully customizable components to accelerate your development.
                    </p>

                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center mb-5">
                        <a href="#getting-started" class="btn btn-primary btn-lg">
