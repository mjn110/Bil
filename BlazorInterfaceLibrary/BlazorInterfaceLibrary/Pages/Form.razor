@using BlazorInterfaceLibrary.Data
<div class="card mt-3 shadow-sm mb-3">
    <h3 class="m-3">Collection</h3>
    <div class="card-body py-0">
        <EditForm Model="@aPerson" OnValidSubmit="AddIt">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <InputText type="date" @bind-Value="aPerson.Date" class="form-control" id="floatingInput"/>
                        <label for="floatingInput">Pickup Date</label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <InputText type="text" @bind-Value="aPerson.Name" class="form-control" id="floatingInput" placeholder="Name"/>
                        <label for="floatingInput">Name</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <InputText type="text" @bind-Value="aPerson.Postcode" class="form-control" id="floatingInput" placeholder="Postcode"/>
                        <label for="floatingInput">Postcode</label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <InputText type="text" @bind-Value="aPerson.PhoneNumber" class="form-control" id="floatingInput" placeholder="PhoneNumber"/>
                        <label for="floatingInput">Phone Number</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3 d-flex justify-content-end">
                    <button class="btn btn-primary" type="submit">Add</button>
                </div>
            </div>
        </EditForm>
    </div>
</div>
@code {
    Person aPerson = new Person();

    [Parameter]
    public string Title { get; set; }

    private void AddIt()
    {
        var newPerson = aPerson;
    }
}
